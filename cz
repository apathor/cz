    cz -f 0 -e "gcloud logging read 'logName : {0}' --project=${proj@Q} --limit 10 --format=json" \
       -i <(gcloud --format=json --project "$proj" logging logs list | jq -r '.[]')
}

cz_gcloud_organization() {
    { hep "$_CZ_HELP" && return; } <<EOF
