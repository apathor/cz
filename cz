    read -r -d '' filter <<EOF
.module_calls | to_entries[]
  | ["module\\(.key)",
     .value.source,
     .value.pos.filename,
     .value.pos.line] | @tsv
EOF
    cz -d $'\t' -f 0 -e "$EDITOR +{3@C} -- {2}" \
       -i <(terraform-config-inspect "$dir" --json | jq -r "$filter")
}

