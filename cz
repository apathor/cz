cz_gh_pr() {
    { hep "$_CZ_HELP" && return; } <<EOF
cz gh pr
Select a Github pull request and view it.
EOF
    req gh awk || return 5
    cz -e 'gh pr view {1}' -f 2 \
       -i <(gh pr list --limit 100 | awk -F $'\t' '{ print $4, $1, $3, $2 }' )
}

