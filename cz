cz_dict_word() {
    { hep "$_CZ_HELP" && return; } <<EOF
cz dict word [QUERY]
Select a word from a dict server and print its definition.
EOF
    req dict || return 5
    local qry="${1}"

    cz -f 3: -e 'dict -- "{3:@P}"' \
       -i <( if [ -z "$qry" ]; then hold -ep -t 86400 -- dict -m -f -s re "";
             else printf "%s\\n" "here" >&2; dict -m -f -s re "$qry"; fi)
}

